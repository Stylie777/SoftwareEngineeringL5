    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django Week3",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/Week3/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Flask Week 2",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "Week2/FlaskTutorial/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
    ]
}